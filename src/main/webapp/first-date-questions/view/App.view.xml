<?xml version="1.0" encoding="UTF-8"?>
<mvc:View
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   controllerName="first-date-questions.view.App">
   <App id="app">
   	<Page title="First Date Questions">
   		<Table items="{/Questions}">
   			<columns>
   				<Column text="Id">
   				</Column>
   				<Column text="Question">
   				</Column>
   			</columns>
   			<ColumnListItem>
   				<Text text="{Id}" />
   				<Text text="{Question}" />
  			</ColumnListItem>
   		</Table>
   		<footer>
   			<Toolbar>
   				<Input id="input" />
   				<Button press="save" text="Save"></Button>
   			</Toolbar>
   		</footer>
   	</Page>
   </App>
</mvc:View>